    "postcss-nested": "^6.2.0",
    "react": "^18.3.1",
    "storybook": "^8.2.9",
    "tailwindcss": "^3.4.10",
    "tsconfig": "*",
    "tsup": "^8.2.4",
    "typescript": "5.5.4"
  }
