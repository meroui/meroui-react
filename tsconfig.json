{
  "compilerOptions": {
    "module": "ESNext",
    "outDir": "./dist",
    "jsx": "react",
    "moduleResolution": "node",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true
  },
  "exclude": ["node_modules", "dist", "types"]
}
