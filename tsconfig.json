{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES5",
    "lib": ["ES2020", "DOM"],
    "jsx": "preserve",
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": false,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": false,
    "allowJs": true,
    "declaration": true,
    "declarationDir": "./dist",
    "paths": {
      "@meroui/react": ["./src"]
    },
    "types": ["node", "react"]
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "tests/**/*", "node_modules"]
}
